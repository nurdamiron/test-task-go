		{
			"name": "01. Healthcheck - Проверка работы сервиса",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Статус 200 OK', function() {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Ответ содержит status=ok', function() {",
							"    const json = pm.response.json();",
							"    pm.expect(json.status).to.eql('ok');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/healthz",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "healthz"]
				}
			}
		},
		{
			"name": "02. Создание сотрудника - Успех",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Статус 201 Created', function() {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test('Заголовок Location присутствует', function() {",
							"    pm.response.to.have.header('Location');",
							"});",
							"",
							"pm.test('Ответ содержит все поля', function() {",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.have.all.keys('id', 'fullName', 'phone', 'city', 'createdAt', 'updatedAt');",
							"    pm.expect(json.fullName).to.eql('Әлихан Нұрғалиев');",
							"    pm.expect(json.phone).to.eql('+77771234567');",
							"    pm.expect(json.city).to.eql('Алматы');",
							"    ",
							"    pm.collectionVariables.set('employeeId', json.id);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"fullName\": \"Әлихан Нұрғалиев\",\n  \"phone\": \"+77771234567\",\n  \"city\": \"Алматы\"\n}"
